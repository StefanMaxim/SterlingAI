{
  "name": "sterling",
  "displayName": "Sterling - AI Learning Assistant",
  "description": "Educational AI that teaches programming concepts step-by-step",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Education", "Other"],
  "activationEvents": [
    "onCommand:sterling.askQuestion"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sterling.askQuestion",
        "title": "Ask Sterling"
      }
    ],
    "keybindings": [
      {
        "command": "sterling.askQuestion",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Sterling",
      "properties": {
        "learnsor.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Claude API key"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  }
}